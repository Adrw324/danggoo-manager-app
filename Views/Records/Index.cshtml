@model IEnumerable<DanggooManager.Models.Record>

@{
    ViewData["Title"] = "Records";
}

<h1>Records</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-2">
            <label for="tableNum" class="sr-only">Table Number:</label>
            <select name="tableNum" id="tableNum" class="form-control" asp-items="@(new SelectList(ViewBag.TableNumbers))">
                <option value="">All Tables</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="year" class="sr-only">Year:</label>
            <select name="year" id="year" class="form-control" asp-items="@(new SelectList(ViewBag.Years))">
                <option value="">All Years</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="month" class="sr-only">Month:</label>
            <select name="month" id="month" class="form-control" asp-items="@(new SelectList(ViewBag.Months))">
                <option value="">All Months</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="date" class="sr-only">Date:</label>
            <input type="date" name="date" id="date" class="form-control" min="@ViewBag.MinDate" max="@ViewBag.MaxDate">
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-block">Filter</button>
        </div>
    </div>
</form>

<div style="height: 500px; overflow-y: auto;">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Table_Num)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Start)</th>
                <th>@Html.DisplayNameFor(model => model.End)</th>
                <th>@Html.DisplayNameFor(model => model.Playtime)</th>
                <th>@Html.DisplayNameFor(model => model.Fee)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Table_Num)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Start)</td>
                    <td>@Html.DisplayFor(modelItem => item.End)</td>
                    <td>@Html.DisplayFor(modelItem => item.Playtime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fee)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>